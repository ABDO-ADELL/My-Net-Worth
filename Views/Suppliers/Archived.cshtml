@model IEnumerable<Supplier>

@{
    ViewData["Title"] = "Archived Suppliers";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Index" class="btn btn-secondary mb-3">← Back to Active Suppliers</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark text-center">
        <tr>
            <th>Supplier ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Number of Items</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr class="text-center">
                <td>@supplier.SupplierId</td>
                <td>@supplier.Name</td>
                <td>@supplier.Email</td>
                <td>@supplier.Phone</td>
                <td>@(supplier.SupplierItems?.Count() ?? 0)</td>
                <td><span class="badge bg-danger">Archived</span></td>
            </tr>
        }
    </tbody>
</table>
