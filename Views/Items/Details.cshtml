@model PRISM.Models.Items

@{
    ViewData["Title"] = "Item Details";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="section-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1>Item Details</h1>
                <p class="text-muted">Complete information about @Model.Name</p>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Items
                </a>
                <a asp-action="Edit" asp-route-id="@Model.ItemId" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Edit Item
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Basic Information Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>Basic Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Item Name</label>
                                <div class="fw-bold fs-5">@Model.Name</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">SKU Code</label>
                                <div>
                                    <code class="fs-5 bg-light px-2 py-1 rounded">@Model.Sku</code>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Business</label>
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-primary-light me-2">
                                        <i class="fas fa-building text-primary"></i>
                                    </div>
                                    <span class="fw-semibold">@Model.Business?.Name</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Branch</label>
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-success-light me-2">
                                        <i class="fas fa-store text-success"></i>
                                    </div>
                                    <span class="fw-semibold">@Model.Branch?.Name</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Category</label>
                                <div>
                                    <span class="badge bg-info text-white px-3 py-2">@Model.ItemCategory?.Name</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Item Type</label>
                                <div>
                                    @if (Model.DurationMinutes.HasValue && Model.DurationMinutes > 0)
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="fas fa-clock me-1"></i>Service
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="fas fa-box me-1"></i>Product
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small">Description</label>
                            <div class="border rounded p-3 bg-light">
                                @Model.Description
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Pricing Information Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-dollar-sign text-success me-2"></i>Pricing Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="text-center p-3 border rounded">
                                <label class="form-label text-muted small d-block">Cost Price</label>
                                <div class="fs-4 fw-bold text-muted">$@Model.CostPrice.ToString("N2")</div>
                                <small class="text-muted">Per unit</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 border rounded bg-success-light">
                                <label class="form-label text-muted small d-block">Sell Price</label>
                                <div class="fs-4 fw-bold text-success">$@Model.SellPrice.ToString("N2")</div>
                                <small class="text-muted">Per unit</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center p-3 border rounded bg-primary-light">
                                <label class="form-label text-muted small d-block">Profit Margin</label>
                                <div class="fs-4 fw-bold text-primary">
                                    @{
                                        var profitMargin = Model.CostPrice > 0 ?
                                        ((Model.SellPrice - Model.CostPrice) / Model.CostPrice * 100) : 0;
                                    }
                                    @profitMargin.ToString("N1")%
                                </div>
                                <small class="text-muted">@((Model.SellPrice - Model.CostPrice).ToString("N2")) profit</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Service Information Card (Conditional) -->
            @if (Model.DurationMinutes.HasValue && Model.DurationMinutes > 0)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-clock text-warning me-2"></i>Service Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Duration</label>
                                    <div class="d-flex align-items-center">
                                        <div class="icon-box bg-warning-light me-3">
                                            <i class="fas fa-hourglass-half text-warning"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold fs-4">@Model.DurationMinutes.Value</div>
                                            <small class="text-muted">Minutes</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label text-muted small">Hourly Rate Equivalent</label>
                                    <div class="d-flex align-items-center">
                                        <div class="icon-box bg-info-light me-3">
                                            <i class="fas fa-calculator text-info"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold fs-4">$@((Model.SellPrice * 60 / Model.DurationMinutes.Value).ToString("N2"))</div>
                                            <small class="text-muted">Per hour</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status & Actions Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar text-info me-2"></i>Status & Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <small class="text-muted d-block">Item ID</small>
                            <strong>#@Model.ItemId</strong>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Status</small>
                            @if (Model.IsDeleted)
                            {
                                <span class="badge bg-danger">Archived</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </div>
                        <div class="col-12">
                            <small class="text-muted d-block">Profit per Unit</small>
                            <strong class="text-success">$@((Model.SellPrice - Model.CostPrice).ToString("N2"))</strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt text-warning me-2"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.ItemId" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit me-2"></i>Edit Item
                        </a>
                        <a href="@Url.Action("Create", "Order")?itemId=@Model.ItemId" class="btn btn-success btn-sm">
                            <i class="fas fa-shopping-cart me-2"></i>Create Order
                        </a>
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-list me-2"></i>All Items
                        </a>
                        <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i>Delete Item
                        </button>
                    </div>
                </div>
            </div>

            <!-- Business Information Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-building text-primary me-2"></i>Business Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        <div class="icon-box bg-primary-light me-3">
                            <i class="fas fa-building text-primary"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">@Model.Business?.Name</div>
                            <small class="text-muted">Business</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start mb-3">
                        <div class="icon-box bg-success-light me-3">
                            <i class="fas fa-store text-success"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">@Model.Branch?.Name</div>
                            <small class="text-muted">Branch Location</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="icon-box bg-info-light me-3">
                            <i class="fas fa-tags text-info"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">@Model.ItemCategory?.Name</div>
                            <small class="text-muted">Category</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <p class="text-muted small">This action will archive the item. You can restore it later from archived items.</p>

                <div class="alert alert-warning mt-3">
                    <h6 class="alert-heading mb-2">Item Details:</h6>
                    <ul class="mb-0 small">
                        <li><strong>SKU:</strong> @Model.Sku</li>
                        <li><strong>Business:</strong> @Model.Business?.Name</li>
                        <li><strong>Branch:</strong> @Model.Branch?.Name</li>
                        @if (Model.DurationMinutes.HasValue)
                        {
                            <li><strong>Type:</strong> Service (@Model.DurationMinutes.Value minutes)</li>
                        }
                        else
                        {
                            <li><strong>Type:</strong> Product</li>
                        }
                    </ul>
                </div>
            </div>
            <div class="modal-footer border-0">
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.ItemId" />
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Item
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .icon-box {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .bg-success-light {
            background-color: rgba(16, 185, 129, 0.1);
        }

        .bg-primary-light {
            background-color: rgba(102, 126, 234, 0.1);
        }

        .bg-warning-light {
            background-color: rgba(245, 158, 11, 0.1);
        }

        .bg-info-light {
            background-color: rgba(79, 172, 254, 0.1);
        }

        .border-rounded {
            border-radius: 12px;
        }

        .fs-5 {
            font-size: 1.25rem !important;
        }

        .fs-4 {
            font-size: 1.5rem !important;
        }

        code {
            font-family: 'Courier New', monospace;
            background: var(--bg-secondary);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            border: 1px solid var(--border-color);
        }
    </style>
}