@model PRISM.Items

@{
    ViewData["Title"] = "Item Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card p-3 shadow-sm">
        <h4>@Model.Name</h4>
        <p><strong>SKU:</strong> @Model.Sku</p>
        <p><strong>Business:</strong> @Model.Business?.Name</p>
        <p><strong>Branch:</strong> @Model.Branch?.Name</p>
        <p><strong>Category:</strong> @Model.ItemCategory?.Name</p>
        <p><strong>Cost Price:</strong> @Model.CostPrice.ToString("C")</p>
        <p><strong>Sell Price:</strong> @Model.SellPrice.ToString("C")</p>
        <p><strong>Deleted:</strong> @(Model.IsDeleted ? "Yes" : "No")</p>
        @if (Model.DurationMinutes.HasValue)
        {
            <p><strong>Duration (minutes):</strong> @Model.DurationMinutes</p>
        }
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p><strong>Description:</strong> @Model.Description</p>
        }
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.ItemId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
