@model PRISM.Models.Items

@{
    ViewData["Title"] = "Add New Item";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="section-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1>Add New Item</h1>
                <p class="text-muted">Create a new product or service in your inventory</p>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Items
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle text-success me-2"></i>Item Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="createItemForm">
                        <!-- Basic Information -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label required">Item Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter item name" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Sku" class="form-label required">SKU Code</label>
                                    <input asp-for="Sku" class="form-control" placeholder="Enter unique SKU" />
                                    <span asp-validation-for="Sku" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Business & Location -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="BusinessId" class="form-label required">Business</label>
                                    <select asp-for="BusinessId" asp-items="ViewBag.Businesses" class="form-select" id="businessSelect">
                                        <option value="">-- Select Business --</option>
                                    </select>
                                    <span asp-validation-for="BusinessId" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="BranchId" class="form-label required">Branch</label>
                                    <select asp-for="BranchId" class="form-select" id="branchSelect" disabled>
                                        <option value="">-- Select Business First --</option>
                                    </select>
                                    <span asp-validation-for="BranchId" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label required">Category</label>
                                    <select asp-for="CategoryId" class="form-select" id="categorySelect" disabled>
                                        <option value="">-- Select Business First --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Pricing -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CostPrice" class="form-label">Cost Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="CostPrice" class="form-control" placeholder="0.00" step="0.01" value="0" />
                                    </div>
                                    <span asp-validation-for="CostPrice" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SellPrice" class="form-label required">Sell Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="SellPrice" class="form-control" placeholder="0.00" step="0.01" />
                                    </div>
                                    <span asp-validation-for="SellPrice" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Service Duration -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DurationMinutes" class="form-label">Service Duration (Minutes)</label>
                                    <input asp-for="DurationMinutes" class="form-control" placeholder="Leave empty for products" type="number" min="0" />
                                    <small class="text-muted">For services only - leave empty for physical products</small>
                                    <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Item Type</label>
                                    <div class="form-control-plaintext">
                                        <span id="itemTypeIndicator" class="badge bg-info">Auto-detected</span>
                                        <small class="text-muted d-block">Based on duration field</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter item description (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Create Item
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Info -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>Quick Info
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">Item Types</h6>
                        <p class="mb-2 small"><strong>Product:</strong> Physical goods with inventory</p>
                        <p class="mb-0 small"><strong>Service:</strong> Time-based services with duration</p>
                    </div>

                    <div class="alert alert-warning">
                        <h6 class="alert-heading">Required Fields</h6>
                        <ul class="mb-0 small">
                            <li>Item Name</li>
                            <li>SKU Code</li>
                            <li>Business</li>
                            <li>Branch</li>
                            <li>Category</li>
                            <li>Sell Price</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Dynamic dropdowns
            $('#businessSelect').change(function () {
                const businessId = $(this).val();
                const branchSelect = $('#branchSelect');
                const categorySelect = $('#categorySelect');

                // Reset and disable dependent dropdowns
                branchSelect.html('<option value="">-- Select Branch --</option>').prop('disabled', !businessId);
                categorySelect.html('<option value="">-- Select Category --</option>').prop('disabled', !businessId);

                if (businessId) {
                    // Load branches
                    $.getJSON('@Url.Action("GetBranches", "Items")', { businessId: businessId }, function (branches) {
                        branches.forEach(function (branch) {
                            branchSelect.append($('<option></option>').val(branch.branchId).text(branch.branchName));
                        });
                    });

                    // Load categories
                    $.getJSON('@Url.Action("GetCategories", "Items")', { businessId: businessId }, function (categories) {
                        categories.forEach(function (category) {
                            categorySelect.append($('<option></option>').val(category.categoryId).text(category.categoryName));
                        });
                    });
                }
            });

            // Item type detection
            $('#DurationMinutes').on('input', function () {
                const duration = $(this).val();
                const indicator = $('#itemTypeIndicator');

                if (duration && duration > 0) {
                    indicator.removeClass('bg-info bg-success').addClass('bg-warning').text('Service');
                } else {
                    indicator.removeClass('bg-info bg-warning').addClass('bg-success').text('Product');
                }
            });

            // Form validation
            $('#createItemForm').on('submit', function (e) {
                const sellPrice = parseFloat($('#SellPrice').val()) || 0;
                const costPrice = parseFloat($('#CostPrice').val()) || 0;

                if (sellPrice > 0 && costPrice > 0 && sellPrice < costPrice) {
                    if (!confirm('Selling price is less than cost price. This will result in a loss. Continue?')) {
                        e.preventDefault();
                    }
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}