@model IEnumerable<PRISM.Items>

@{
    ViewData["Title"] = "Archived Items";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Index" class="btn btn-secondary mb-3">← Back to Active Items</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark text-center">
        <tr>
            <th>Item ID</th>
            <th>Name</th>
            <th>SKU</th>
            <th>Cost Price</th>
            <th>Sell Price</th>
            <th>Category</th>
            <th>Branch</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.ItemId</td>
                <td>@item.Name</td>
                <td>@item.Sku</td>
                <td>@item.CostPrice.ToString("C")</td>
                <td>@item.SellPrice.ToString("C")</td>
                <td>@item.ItemCategory?.Name</td>
                <td>@item.Branch?.Name</td>
                <td><span class="badge bg-danger">Archived</span></td>
            </tr>
        }
    </tbody>
</table>
