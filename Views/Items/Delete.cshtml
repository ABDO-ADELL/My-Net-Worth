@model PRISM.Items

@{
    ViewData["Title"] = "Delete Item";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="alert alert-danger">
        Are you sure you want to delete this item?
    </div>

    <div class="card p-3 shadow-sm">
        <p><strong>Item Name:</strong> @Model.Name</p>
        <p><strong>SKU:</strong> @Model.Sku</p>
        <p><strong>Business:</strong> @Model.Business?.Name</p>
        <p><strong>Branch:</strong> @Model.Branch?.Name</p>
        <p><strong>Category:</strong> @Model.ItemCategory?.Name</p>
        <p><strong>Cost Price:</strong> @Model.CostPrice.ToString("C")</p>
        <p><strong>Sell Price:</strong> @Model.SellPrice.ToString("C")</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="ItemId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
