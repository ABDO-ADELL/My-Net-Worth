@model PRISM.Models.OrderItem

<div class="order-item-details">
    <div class="page-header">
        <h1>Sales Item Details</h1>
        <div class="header-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <button class="btn btn-primary" onclick="window.print()">
                <i class="fas fa-print"></i> Print Details
            </button>
        </div>
    </div>

    <div class="details-container">
        <div class="row">
            <!-- Item Information Card -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-box"></i> Item Information</h3>
                    </div>
                    <div class="card-body">
                        <div class="info-group">
                            <label>Item Name:</label>
                            <div class="info-value">@Model.Item?.Name</div>
                        </div>
                        <div class="info-group">
                            <label>Item ID:</label>
                            <div class="info-value">@Model.Item?.ItemId</div>
                        </div>
                        <div class="info-group">
                            <label>Category:</label>
                            <div class="info-value">@(Model.Item?.Name ?? "Not specified")</div>
                        </div>
                        <div class="info-group">
                            <label>Description:</label>
                            <div class="info-value">@(Model.Item?.Description ?? "No description available")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order & Pricing Information Card -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-receipt"></i> Order & Pricing</h3>
                    </div>
                    <div class="card-body">
                        <div class="info-group">
                            <label>Order ID:</label>
                            <div class="info-value">@Model.order?.order_id</div>
                        </div>
                        <div class="info-group">
                            <label>Quantity:</label>
                            <div class="info-value">@Model.Quantity</div>
                        </div>
                        <div class="info-group">
                            <label>Unit Price:</label>
                            <div class="info-value">@Model.Price.ToString("C")</div>
                        </div>
                        <div class="info-group">
                            <label>Total Price:</label>
                            <div class="info-value total-price">@((Model.Quantity * Model.Price).ToString("C"))</div>
                        </div>
                        <div class="info-group">
                            <label>Order Date:</label>
                            <div class="info-value">@(Model.order?.datetime.ToString("MMM dd, yyyy") ?? "Not available")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Details Section -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-info-circle"></i> Additional Details</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="info-group">
                                    <label>Status:</label>
                                    <div class="info-value">
                                        <span class="badge badge-success">Completed</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="info-group">
                                    <label>Supplier:</label>
                                    <div class="info-value">@( "Not specified")</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="info-group">
                                    <label>Stock Level:</label>
                                    <div class="info-value">
                                        @if (true)
                                        {
                                            <span class="text-success">In Stock </span>
                                        }
@*                                         else if (Model.Item?.StockLevel > 0)
                                        {
                                            <span class="text-warning">Low Stock (@Model.Item.StockLevel)</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Out of Stock</span>
                                        } *@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons mt-4">
            <a asp-action="Edit" asp-route-id="@Model.OrderItemId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit Item
            </a>
            <a asp-controller="Items" asp-action="Details" asp-route-id="@Model.Item?.ItemId" class="btn btn-info">
                <i class="fas fa-external-link-alt"></i> View Item Details
            </a>
            <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.order?.order_id" class="btn btn-info">
                <i class="fas fa-file-invoice"></i> View Full Order
            </a>
        </div>
    </div>
</div>

<style>
    .order-item-details {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eaeaea;
    }

    .page-header h1 {
        color: #2c3e50;
        font-weight: 600;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .card {
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eaeaea;
        padding: 15px 20px;
        border-radius: 8px 8px 0 0 !important;
    }

    .card-header h3 {
        margin: 0;
        font-size: 1.2rem;
        color: #2c3e50;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .card-body {
        padding: 20px;
    }

    .info-group {
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
    }

    .info-group label {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 1rem;
        color: #495057;
    }

    .total-price {
        font-size: 1.2rem;
        font-weight: 700;
        color: #28a745;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 0.8rem;
    }

    .badge-success {
        background-color: #d4edda;
        color: #155724;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: 1px solid #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: 1px solid #007bff;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #212529;
        border: 1px solid #ffc107;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        border: 1px solid #17a2b8;
    }

    .btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .text-success {
        color: #28a745 !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .text-danger {
        color: #dc3545 !important;
    }

</style>