@model Branch

@{
    ViewData["Title"] = "Add New Branch";
}

<h2>Add New Branch</h2>

<form asp-action="Create" method="post">
    <!-- Business Dropdown -->
    <div class="form-group mt-2">
        <label asp-for="BusinessId">Business</label>
        <select asp-for="BusinessId" asp-items="ViewBag.Businesses" class="form-control">
            <option value="">-- Select Business --</option>
        </select>
        <span asp-validation-for="BusinessId" class="text-danger"></span>
    </div>

    <!-- Branch Name -->
    <div class="form-group mt-2">
        <label asp-for="Name">Branch Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter branch name..." />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Address -->
    <div class="form-group mt-2">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" placeholder="Enter branch address..." />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <!-- Phone -->
    <div class="form-group mt-2">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" placeholder="Enter branch phone number..." />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <!-- IsDeleted -->
    <div class="form-check mt-3">
        <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsDeleted" class="form-check-label">Mark as Inactive</label>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary mt-3">Add Branch</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
