@model Branch

@{
    ViewData["Title"] = "Branch Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card p-3 shadow-sm">
        <h4>@Model.Name</h4>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Business:</strong> @Model.Business?.Name</p>
        <p><strong>Deleted:</strong> @(Model.IsDeleted ? "Yes" : "No")</p>

        @if (Model.Items != null && Model.Items.Any())
        {
            <p><strong>Items:</strong> @Model.Items.Count()</p>
        }

        @if (Model.Inventories != null && Model.Inventories.Any())
        {
            <p><strong>Inventories:</strong> @Model.Inventories.Count()</p>
        }
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.BranchId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
