@model Expense

@{
    ViewData["Title"] = "Expense Details";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Expense Details #@Model.ExpenseId</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="border-start border-primary border-4 ps-3 mb-3">
                                <small class="text-muted">Expense ID</small>
                                <h5>#@Model.ExpenseId</h5>
                            </div>
                            <div class="border-start border-danger border-4 ps-3 mb-3">
                                <small class="text-muted">Amount</small>
                                <h4 class="text-danger mb-0">EGP @Model.Amount.ToString("N2")</h4>
                            </div>
                            <div class="border-start border-secondary border-4 ps-3">
                                <small class="text-muted">Payment Method</small>
                                <h6>@Model.PaymentMethod</h6>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border-start border-success border-4 ps-3 mb-3">
                                <small class="text-muted">Category</small>
                                <h6>@(string.IsNullOrWhiteSpace(Model.Category) ? "N/A" : Model.Category)</h6>
                            </div>
                            <div class="border-start border-warning border-4 ps-3 mb-3">
                                <small class="text-muted">Branch</small>
                                <h6>@(Model.Branch?.Name ?? "Not Specified")</h6>
                            </div>
                            <div class="border-start border-info border-4 ps-3">
                                <small class="text-muted">Date</small>
                                <h6>@Model.ExpenseDate.ToString("MMMM dd, yyyy HH:mm")</h6>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <div class="alert alert-light">
                            <strong>Description:</strong><br />
                            @Model.Description
                        </div>
                    }

                    <div class="d-flex gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.ExpenseId" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Index" asp-route-businessId="@Model.BusinessId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>