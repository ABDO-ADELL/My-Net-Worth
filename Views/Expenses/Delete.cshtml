@model Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Expense</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this expense? This action cannot be undone.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th width="30%">Expense ID</th>
                                    <td>#@Model.ExpenseId</td>
                                </tr>
                                <tr>
                                    <th>Amount</th>
                                    <td><strong class="text-danger">EGP @Model.Amount.ToString("N2")</strong></td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td>@Model.ExpenseDate.ToString("MMMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Category</th>
                                    <td>@(string.IsNullOrWhiteSpace(Model.Category) ? "N/A" : Model.Category)</td>
                                </tr>
                                <tr>
                                    <th>Branch</th>
                                    <td>@(Model.Branch?.Name ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <th>Payment Method</th>
                                    <td>@Model.PaymentMethod</td>
                                </tr>
                                @if (!string.IsNullOrWhiteSpace(Model.Description))
                                {
                                    <tr>
                                        <th>Description</th>
                                        <td>@Model.Description</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="ExpenseId" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" asp-route-businessId="@Model.BusinessId" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>