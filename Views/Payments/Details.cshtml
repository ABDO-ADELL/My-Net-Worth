@model Payment

@{
    ViewData["Title"] = "Payment Details";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>Payment Details #@Model.PaymentId</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="border-start border-primary border-4 ps-3 mb-3">
                                <small class="text-muted">Payment ID</small>
                                <h5>#@Model.PaymentId</h5>
                            </div>
                            <div class="border-start border-success border-4 ps-3 mb-3">
                                <small class="text-muted">Amount</small>
                                <h3 class="text-success mb-0">EGP @Model.Amount.ToString("N2")</h3>
                            </div>
                            <div class="border-start border-secondary border-4 ps-3">
                                <small class="text-muted">Payment Method</small>
                                <h6>@Model.Method</h6>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border-start border-info border-4 ps-3 mb-3">
                                <small class="text-muted">Date & Time</small>
                                <h6>@Model.datetime.ToString("MMMM dd, yyyy")</h6>
                                <p class="text-muted mb-0">@Model.datetime.ToString("hh:mm:ss tt")</p>
                            </div>
                            <div class="border-start border-dark border-4 ps-3">
                                <small class="text-muted">Order Reference</small>
                                @if (Model.Order != null)
                                {
                                    <h6>Order #@Model.OrderId</h6>
                                }
                                else
                                {
                                    <h6 class="text-muted">Not Available</h6>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.PaymentId" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Index" asp-route-businessId="@Model.Order?.BusinessId" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
