@model IEnumerable<Payment>

@{
    ViewData["Title"] = "Payments";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Payments</h2>
        <a asp-action="Create" asp-route-businessId="@ViewBag.BusinessId" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Payment
        </a>
    </div>

    @* Filters Card *@
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <input type="hidden" name="businessId" value="@ViewBag.BusinessId" />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Start Date</label>
                        <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">End Date</label>
                        <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-info w-100">
                            <i class="fas fa-search me-2"></i>Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Statistics Card *@
    @if (Model.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm border-start border-success border-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <p class="text-muted mb-1">Total Payments</p>
                                <h4 class="mb-0">@Model.Count()</h4>
                            </div>
                            <div class="text-success">
                                <i class="fas fa-money-bill-wave fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card shadow-sm border-start border-primary border-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <p class="text-muted mb-1">Total Amount</p>
                                <h3 class="mb-0 text-primary">EGP @Model.Sum(p => p.Amount).ToString("N2")</h3>
                            </div>
                            <div class="text-primary">
                                <i class="fas fa-coins fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Payments Table *@
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Date & Time</th>
                                <th>Order ID</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@item.PaymentId</strong></td>
                                    <td><span class="badge bg-success">EGP @item.Amount.ToString("N2")</span></td>
                                    <td>
                                        @if (item.Method == "Cash")
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-money-bill me-1"></i>@item.Method</span>
                                        }
                                        else if (item.Method.Contains("Card") || item.Method.Contains("card"))
                                        {
                                            <span class="badge bg-info"><i class="fas fa-credit-card me-1"></i>@item.Method</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary"><i class="fas fa-university me-1"></i>@item.Method</span>
                                        }
                                    </td>
                                    <td>@item.datetime.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (item.Order != null)
                                        {
                                            <span class="badge bg-dark">Order #@item.OrderId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No payments found</p>
                </div>
            }
        </div>
    </div>
</div>