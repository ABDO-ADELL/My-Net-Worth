@model Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Payment</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this payment? This action cannot be undone.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th width="30%">Payment ID</th>
                                    <td>#@Model.PaymentId</td>
                                </tr>
                                <tr>
                                    <th>Amount</th>
                                    <td><strong class="text-success">EGP @Model.Amount.ToString("N2")</strong></td>
                                </tr>
                                <tr>
                                    <th>Payment Method</th>
                                    <td>@Model.Method</td>
                                </tr>
                                <tr>
                                    <th>Date & Time</th>
                                    <td>@Model.datetime.ToString("MMMM dd, yyyy HH:mm:ss")</td>
                                </tr>
                                <tr>
                                    <th>Order ID</th>
                                    <td>
                                        @if (Model.Order != null)
                                        {
                                            <span>Order #@Model.OrderId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="PaymentId" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" asp-route-businessId="@Model.Order?.BusinessId" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>