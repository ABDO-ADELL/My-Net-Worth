@model PRISM.Models.ItemCategory

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="card p-3 shadow-sm">
        <h4>@Model.Name</h4>
        <p><strong>Business:</strong> @Model.Business?.Name</p>
        <p><strong>Archived:</strong> @(Model.IsArchived ? "Yes" : "No")</p>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
