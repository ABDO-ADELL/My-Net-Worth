@model PRISM.Models.ItemCategory

@{
    ViewData["Title"] = "Add Category";
}

<h2>Add New Category</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BusinessId">Business</label>
        <select asp-for="BusinessId" asp-items="ViewBag.Businesses" class="form-control">
            <option value="">-- Select Business --</option>
        </select>
        <span asp-validation-for="BusinessId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add Category</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
