@model IEnumerable<PRISM.Models.ItemCategory>

@{
    ViewData["Title"] = "Item Categories";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add New Category</a>
    <a asp-action="Archived" class="btn btn-outline-secondary">View Archived</a>
</p>

<!-- ✅ مربع البحث -->
<div class="d-flex align-items-center mb-3" style="gap: 10px;">
    <div style="position: relative; width: 250px;">
        <input type="text"
               id="searchBox"
               class="form-control"
               placeholder="Search categories..."
               oninput="filterTable()" />

        <!-- ❌ زر المسح -->
        <span id="clearBtn"
              onclick="clearSearch()"
              style="position: absolute; right: 10px; top: 8px; cursor: pointer; display: none; color: #888;">
            ✖
        </span>
    </div>
</div>

<!-- ✅ الجدول -->
<table class="table table-bordered table-striped" id="categoryTable">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Name</th>
            <th>Business Name</th>
            <th>Archived?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.Name</td>
                <td>@item.Business?.Name</td>
                <td>@item.IsArchived</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ الرسالة اللي بتظهر لما مفيش نتايج -->
<p id="noResults" style="display:none; color: #888; font-style: italic;">
    🚫 No categories found.
</p>

<!-- ✅ سكربت البحث -->
<script>
    function filterTable() {
        const input = document.getElementById("searchBox");
        const filter = input.value.toLowerCase();
        const table = document.getElementById("categoryTable");
        const trs = table.getElementsByTagName("tr");
        const clearBtn = document.getElementById("clearBtn");
        const noResults = document.getElementById("noResults");

        let visibleCount = 0;

        // إظهار أو إخفاء زر ×
        clearBtn.style.display = filter ? "block" : "none";

        // فلترة الجدول
        for (let i = 1; i < trs.length; i++) {
            const name = trs[i].getElementsByTagName("td")[1]?.textContent.toLowerCase();
            const business = trs[i].getElementsByTagName("td")[2]?.textContent.toLowerCase();

            if (name.includes(filter) || business.includes(filter)) {
                trs[i].style.display = "";
                visibleCount++;
            } else {
                trs[i].style.display = "none";
            }
        }

        // عرض أو إخفاء رسالة "لا توجد نتائج"
        noResults.style.display = visibleCount === 0 ? "block" : "none";
    }

    function clearSearch() {
        const input = document.getElementById("searchBox");
        input.value = "";
        document.getElementById("clearBtn").style.display = "none";
        filterTable(); // يرجع الجدول بالكامل
    }
</script>
