@model IEnumerable<PRISM.Models.ItemCategory>

@{
    ViewData["Title"] = "Archived Categories";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Index" class="btn btn-secondary mb-3">← Back to Active Categories</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Business</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Business?.Name</td>
                <td><span class="badge bg-danger">Archived</span></td>
                <td>
                    <form asp-action="Unarchive" method="post">
                        <input type="hidden" name="id" value="@item.CategoryId" />
                        <button type="submit" class="btn btn-success btn-sm">
                            Unarchive
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
