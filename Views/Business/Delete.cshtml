@model Business

@{
    ViewData["Title"] = "Delete Business";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-danger">
        ⚠️ Are you sure you want to delete this business?
    </div>

    <div class="card p-3 shadow-sm">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Industry:</strong> @Model.Industry</p>
        <p><strong>Timezone:</strong> @Model.Timezone</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="BusinessId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
