@model List<Business>

@{
    ViewData["Title"] = "Archived Businesses";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Index" class="btn btn-secondary mb-3">← Back to Active Businesses</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark text-center">
        <tr>
            <th>Business ID</th>
            <th>Name</th>
            <th>Industry</th>
            <th>Timezone</th>
            <th>Status</th>
            <th>Branches</th>
            <th>Items</th>
            <th>Actions</th>   @* ➕ Added *@
        </tr>
    </thead>
    <tbody>
        @foreach (var business in Model)
        {
            <tr class="text-center">
                <td>@business.BusinessId</td>
                <td>@business.Name</td>
                <td>@business.Industry</td>
                <td>@business.Timezone</td>
                <td>@business.Status</td>
                <td>@(business.Branches?.Count() ?? 0)</td>
                <td>@(business.Items?.Count() ?? 0)</td>
                <td>
                    <form asp-action="Unarchive" method="post">
                        <input type="hidden" name="id" value="@business.BusinessId" />
                        <button type="submit" class="btn btn-success btn-sm">
                            Unarchive
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
