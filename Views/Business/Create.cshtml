@model Business

@{
    ViewData["Title"] = "Add New Business";
}

<h2>Add New Business</h2>

<form asp-action="Create" method="post">
    <!-- Business Name -->
    <div class="form-group mt-2">
        <label asp-for="Name">Business Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter business name..." />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Industry -->
    <div class="form-group mt-2">
        <label asp-for="Industry">Industry</label>
        <input asp-for="Industry" class="form-control" placeholder="e.g., Retail, IT, Food Services..." />
        <span asp-validation-for="Industry" class="text-danger"></span>
    </div>

    <!-- Timezone -->
    <div class="form-group mt-2">
        <label asp-for="Timezone">Timezone</label>
        <input asp-for="Timezone" class="form-control" placeholder="e.g., Africa/Cairo" />
        <span asp-validation-for="Timezone" class="text-danger"></span>
    </div>

    <!-- Status -->
    <div class="form-group mt-2">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" class="form-select">
            <option value="">-- Select Status --</option>
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- IsDeleted -->
    <div class="form-check mt-3">
        <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsDeleted" class="form-check-label">Mark as Inactive</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add Business</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
