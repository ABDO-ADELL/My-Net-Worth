@model List<Business>

@{
    ViewData["Title"] = "Businesses";
}

<h2>@ViewData["Title"]</h2>

<!-- Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 d-flex align-items-center" role="alert" style="border-left: 6px solid #28a745; background: #ecf9f0;">
        <i class="bi bi-check-circle-fill fs-4 me-2 text-success"></i>
        <div>
            <strong>Success:</strong> @TempData["SuccessMessage"]
        </div>
        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Error Alert -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 d-flex align-items-center" role="alert" style="border-left: 6px solid #dc3545; background: #fcebea;">
        <i class="bi bi-exclamation-triangle-fill fs-4 me-2 text-danger"></i>
        <div>
            <strong>Error:</strong> @TempData["ErrorMessage"]
        </div>
        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<p>
    <a asp-action="Create" class="btn btn-primary">+ Add New Business</a>
    <a asp-action="Archived" class="btn btn-outline-secondary">View Archived</a>
</p>

<!-- ✅ Search box -->
<div class="d-flex align-items-center mb-3" style="gap: 10px;">
    <div style="position: relative; width: 250px;">
        <input type="text"
               id="searchBox"
               class="form-control"
               placeholder="Search businesses..."
               oninput="filterTable()" />

        <!-- ❌ Clear button -->
        <span id="clearBtn"
              onclick="clearSearch()"
              style="position: absolute; right: 10px; top: 8px; cursor: pointer; display: none; color: #888;">
            ✖
        </span>
    </div>
</div>

<!-- ✅ Table -->
<table class="table table-bordered table-striped" id="businessTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Industry</th>
            <th>Timezone</th>
            <th>Status</th>
            <th>Deleted?</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BusinessId</td>
                <td>@item.Name</td>
                <td>@item.Industry</td>
                <td>@item.Timezone</td>
                <td>@item.Status</td>
                <td>@item.IsDeleted</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BusinessId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BusinessId" class="btn btn-sm btn-info">Details</a>
                    <form asp-action="Delete" asp-route-id="@item.BusinessId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this business?');">
                            Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ No results message -->
<p id="noResults" style="display:none; color: #888; font-style: italic;">
    🚫 No businesses found.
</p>

<!-- ✅ Filter Script -->
<script>
    function filterTable() {
        const input = document.getElementById("searchBox");
        const filter = input.value.toLowerCase();
        const table = document.getElementById("businessTable");
        const trs = table.getElementsByTagName("tr");
        const clearBtn = document.getElementById("clearBtn");
        const noResults = document.getElementById("noResults");

        let visibleCount = 0;
        clearBtn.style.display = filter ? "block" : "none";

        for (let i = 1; i < trs.length; i++) {
            const name = trs[i].getElementsByTagName("td")[1]?.textContent.toLowerCase();
            const industry = trs[i].getElementsByTagName("td")[2]?.textContent.toLowerCase();

            if (name.includes(filter) || industry.includes(filter)) {
                trs[i].style.display = "";
                visibleCount++;
            } else {
                trs[i].style.display = "none";
            }
        }

        noResults.style.display = visibleCount === 0 ? "block" : "none";
    }

    function clearSearch() {
        const input = document.getElementById("searchBox");
        input.value = "";
        document.getElementById("clearBtn").style.display = "none";
        filterTable();
    }
</script>


@section Scripts {
    <script>
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(alert => {
                let a = new bootstrap.Alert(alert);
                a.close();
            });
        }, 4000);
    </script>
}
