@model Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user"></i> Customer Details
                    </h4>
                </div>

                <div class="card-body">
                    <!-- Customer Information -->
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-info-circle"></i> Customer Information
                    </h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Customer ID:</label>
                                <p>@Model.CustomerId</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Customer Name:</label>
                                <p>@Model.FullName</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Phone Number:</label>
                                <p>@Model.Phone</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label>Email:</label>
                                <p>@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    @* <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="info-group">
                                <label>Address:</label>
                                <p>@Model.</p>
                            </div>
                        </div>
                    </div> *@

                    <hr />

                    <!-- Branch Information -->
                    @if (Model.Branch != null)
                    {
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-building"></i> Branch Information
                        </h5>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label>Branch Name:</label>
                                    <p>@Model.Branch.Name</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-group">
                                    <label>Location:</label>
                                    <p>@Model.Branch.Address</p>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <!-- Business Information -->
                        @if (Model.Branch.Business != null)
                        {
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-briefcase"></i> Business Information
                            </h5>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="info-group">
                                        <label>Business Name:</label>
                                        <p>@Model.Branch.Business.Name</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-group">
                                        <label>Industry:</label>
                                        <p>@Model.Branch.Business.Industry</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete customer <strong>@Model.FullName</strong>?</p>
                <p class="text-danger">This action cannot be undone!</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-route-id="@Model.CustomerId" method="post">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cancel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .info-group {
        margin-bottom: 15px;
    }

        .info-group label {
            color: #495057;
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        .info-group p {
            color: #6c757d;
            font-size: 16px;
            margin-bottom: 0;
        }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
</style>